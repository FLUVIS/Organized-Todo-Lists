<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="window" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="114.0" prefWidth="403.0">
         <children>
            <Label text="Are you sure you want to delete">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="600.0">
               <children>
                  <Label fx:id="project" text="project" textFill="RED">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label text="?">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="600.0">
               <children>
                  <Button fx:id="yesButton" mnemonicParsing="false" onAction="#yes" prefHeight="30.0" prefWidth="50.0" style="-fx-background-color: transparent;" />
                  <AnchorPane prefHeight="100.0" prefWidth="48.0" />
                  <Button fx:id="noButton" mnemonicParsing="false" onAction="#no" prefHeight="30.0" prefWidth="50.0" style="-fx-background-color: transparent;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
